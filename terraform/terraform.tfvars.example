# Example Terraform variables file
# Copy this file to terraform.tfvars and update the values

# AWS region where resources will be created
aws_region = "us-west-2"

# EC2 instance type (t2.micro is free tier eligible)
instance_type = "t2.micro"

# AWS Key Pair name for SSH access (must exist in your AWS account)
key_name = "your-key-pair-name"
# Région AWS
aws_region = "eu-west-3"  # Paris

# Nom du projet (préfixe utilisé pour nommer les ressources)
project_name = "trading-platform"

# Nom de domaine (optionnel, si tu veux associer ton propre domaine CloudFront)
domain_name = ""  # ex: "qube-trading.me" ou vide pour générer un CloudFront par défaut

# ------------- FRONTEND -------------
frontend_bucket_name = "trading-platform-frontend"  # S3 bucket pour le front (doit être unique globalement)
frontend_build_path  = "./web/dist"  # chemin local du build frontend

# ------------- BACKEND -------------
backend_image = "ghcr.io/quentinpiot/trading-backend:latest" # ou ton image ECR une fois pushée
backend_container_port = 8000

# ------------- DATABASE -------------
db_username = "postgres"
db_password = "postgres123"     # ou mets une variable d’environnement GitHub Actions pour la sécurité
db_name     = "tradingdb"

# ------------- NETWORKING -------------
vpc_cidr = "10.0.0.0/16"
public_subnets  = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnets = ["10.0.3.0/24", "10.0.4.0/24"]

# ------------- EFS -------------
efs_encrypted = true

# ------------- CloudFront -------------
cloudfront_price_class = "PriceClass_100" # Europe + US, plus économique

# CIDR block allowed for SSH access (replace with your IP for security)
# Example: "203.0.113.0/32" for a specific IP
allowed_ssh_cidr = "0.0.0.0/0"

# ------------- Custom Domain -------------
# Configure a custom domain for CloudFront using an existing ACM certificate
frontend_alias_domain = ""  # ex: "your-domain.com" or empty for default CloudFront domain
acm_certificate_arn   = ""  # ARN of your ACM certificate in us-east-1

# Frontend URL for OAuth redirects (should match your domain)
frontend_url = ""  # ex: "https://your-domain.com" or "https://d123456789.cloudfront.net"

# ------------- Google OAuth Configuration -------------
# Google OAuth Client ID and Secret for Cognito Identity Provider
# These values should be obtained from Google Cloud Console
# Leave empty to disable Google OAuth integration
google_client_id     = ""
google_client_secret = ""
