# Database Configuration
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/trading_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=trading_db

# Application Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration
HOST=0.0.0.0
PORT=8000
RUN_WORKER=false

# CloudWatch Logging (Optional)
ENABLE_CLOUDWATCH_LOGGING=false
AWS_REGION=us-east-1
AWS_LOG_GROUP=/aws/lambda/trading-platform
AWS_LOG_STREAM=api-logs
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# SQS Queue Configuration (LocalStack)
ENVIRONMENT=development
SQS_QUEUE_URL=http://localhost:4566/000000000000/trading-platform-monte-carlo-jobs
SQS_DLQ_URL=http://localhost:4566/000000000000/trading-platform-monte-carlo-jobs-dlq
SQS_VISIBILITY_TIMEOUT=300
SQS_MESSAGE_RETENTION=1209600
SQS_MAX_RECEIVE_COUNT=3
SQS_ENDPOINT_URL=http://localhost:4566

# Redis Configuration (LocalStack ou standalone)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# Alternative avec LocalStack Redis (si probl√®me avec standalone)
# REDIS_URL=redis://localhost:4510

# S3 Configuration (LocalStack)
S3_ARTIFACTS_BUCKET=trading-platform-monte-carlo-artifacts-local
S3_ENDPOINT_URL=http://localhost:4566

# Worker Configuration
WORKER_ID=worker-1
MAX_CONCURRENT_JOBS=1
POLL_INTERVAL=1.0
HEALTH_CHECK_INTERVAL=30.0
SHUTDOWN_TIMEOUT=300

# Job Configuration
DEFAULT_JOB_TIMEOUT=3600
DEFAULT_MAX_RETRIES=3
MAX_RUNS_PER_JOB=10000
MIN_RUNS_PER_JOB=1

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_RETENTION_HOURS=24
MONITORING_HEALTH_CHECK_INTERVAL=30.0
PERFORMANCE_WINDOW_SIZE=100

# Monte Carlo Configuration
MAX_MONTE_CARLO_RUNS=20000


COGNITO_REGION=eu-west-3
COGNITO_USER_POOL_ID=
COGNITO_CLIENT_ID=
COGNITO_IDENTITY_POOL_ID=

